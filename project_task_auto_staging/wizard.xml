<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <act_window id="autostaging_configure"
                    name="Autostaging"
                    src_model="project_task_auto_staging.autostaging"
                    res_model="project_task_auto_staging.wizard"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/> 

        <record model="ir.ui.view" id="autostaging_configure_wizard">
            <field name="name">wizard.form</field>
            <field name="model">project_task_auto_staging.wizard</field>
            <field name="arch" type="xml">
                <form string="Edit autostaging configure">
                    <sheet>
                        <group  string="Automove to 'Done' stage of the 'Testing' stage">
                            <field name="testing_stage_id" string="Select testing stage"/>
                            <group col="4" colspan="2">
                                <field name="done_stage_id" string="Select done stage"/>
                                <field name="delay_done" string="Delay (in days)"/>
                            </group>
                        </group>
                        <group col="4" string="Automove to 'Cancelled' stage">
                            <field name="cancell_stage_id" string="Select cancelled stage"/>
                            <field name="delay_cancell" string="Delay (in days)"/>
                        </group>
                        <footer>
                        <button name="btn_confirm" class="oe_highlight"
                                string="Confirm" type="object"/>
                        </footer>
                     </sheet>
                </form>
            </field>
        </record>

       <record id="autostaging_configuration_installer" model="ir.actions.todo">
            <field name="action_id" ref="autostaging_configure"/>
            <field name="type">automatic</field>
        </record> 

        <menuitem id="autostaging_menu" name="Autostaging"
                  parent="base.menu_project_config_project" sequence="3"
                  action="autostaging_configure"/>


